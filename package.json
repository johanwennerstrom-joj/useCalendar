  "repository": {
    "type": "git",
    "url": "git+https://github.com/johanwennerstrom-joj/useCalendar.git"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.28",
    "coverage-badge-creator": "^1.0.17",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.8.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2"
  },
  "peerDependencies": {
    "react": ">=17.2.0",
    "react-dom": ">=17.2.0"
